        <front>
            <titlePage type="titlepage" n="1" rendition="#manuscript">
                <docTitle>
                    <titlePart type="main" rend="purple_ink white_paper" rendition="#manuscript">The
                        president is Gone</titlePart>
                    <titlePart type="sub" rend="black ink white_paper" rendition="#manuscript">And
                        other notes from the future</titlePart>
                </docTitle>
                <docAuthor rend="black ink white_paper">
                    <persName>Angélica</persName>
                </docAuthor>
                <docDate rend="black ink white_paper">2023</docDate>
            </titlePage>
